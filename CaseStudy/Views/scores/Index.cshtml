@model IEnumerable<CaseStudy.Model.score>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.score_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.test)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.score_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.id_student)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.test.test_code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_score">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_score">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_score">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
